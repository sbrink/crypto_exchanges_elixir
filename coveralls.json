{
  "default_stop_words": [
    "defmodule",
    "defrecord",
    "defimpl",
    "defexception",
    "defprotocol",
    "defstruct",
    "def.+(.+\\\\.+).+do",
    "^\\s+use\\s+"
  ],

  "custom_stop_words": [
    "schema"
  ],

  "coverage_options": {
    "treat_no_relevant_lines_as_covered": true,
    "template_path": "test/support/coveralls_template/",
    "output_dir": "cover/",
    "minimum_coverage": 90
  },

  "terminal_options": {
    "file_column_width": 40
  },

  "skip_files": [
    "lib/mix"
  ]
}
